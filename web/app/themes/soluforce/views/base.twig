  {% block head %}
    {% include 'head.twig' %}
    {{ function('wp_head') }}
  {% endblock %}
  </head>

	<body class="{{body_class}}">
	  <!--[if IE 8]>
      <div class="alert alert-warning">
        {{ __('You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.', 'sage') }}
      </div>
    <![endif]-->
		{% block header %}
		  {% include 'header.twig' %}
    {% endblock %}
    <div class="wrap" role="document">
      {% if carousel %}
        {% block carousel %}
          {% set grid_sizes = [[
            ['', 2560, 960, 'center', 1920], 
            ['', 1920, 720, 'center', 1680], 
            ['', 1680, 630, 'center', 1280], 
            ['', 1280, 480, 'center', 1024], 
            ['', 1024, 384, 'center', 768], 
            ['', 768, 576, 'center']
          ], 1280, 480, 'center'] %}
          {% include 'carousel.twig' %}
        {% endblock %}
      {% endif %}
      {% if header_img %}
        {% block header_image %}
          {% set grid_sizes = [[
            ['', 2560, 768, 'center', 1920], 
            ['', 1920, 576, 'center', 1680], 
            ['', 1680, 504, 'center', 1280], 
            ['', 1280, 384, 'center', 1024], 
            ['', 1024, 307, 'center', 768], 
            ['', 768, 432, 'center']
          ], 1280, 384, 'center'] %}
          {% include 'header-image.twig' %}
        {% endblock %}
      {% endif %}      
      <div class="container">
        <div class="content row">
          <main class="main">
            {% block main %}
              Sorry, no content
            {% endblock %}
          </main>
          {% if display_sidebar %}
            <aside class="sidebar">
              {% block sidebar %}
                {% include 'sidebar.twig' %}
              {% endblock %}
            </aside>
          {% endif %}
        </div>
      </div>
      {% if sections %}
        {% for section in sections %}
      	  <section class="{{section.acf_fc_layout}} flex_block">
            {% if section.acf_fc_layout == 'benefits_block' %}
              {% include 'block-benefits.twig' %}
            {% elseif section.acf_fc_layout == 'cases_block' %}
              {% include 'block-cases.twig' %}
            {% endif %}
      	  </section>
        {% endfor %}
      {% endif %}
      <div class="push"></div>
    </div>
		{% block footer %}
		  {% include 'footer.twig' %}
			{{ function('wp_footer') }}
		{% endblock %}
	</body>
</html>