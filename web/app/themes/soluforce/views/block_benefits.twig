{% block benefits %}
  <div class="container">
    <h1>{{section.acf_block_title}}</h1>
    {{section.acf_block_content}}
    {% if benefits %}
      <div class="benefits__row row">
        {% for benefit in benefits %}
          <article class="{{benefit.post_title | sanitize}} benefits__benefit touch_effect col-xs-6 col-sm-4">
            <div class="benefit__icon">
              <div class="stretch loading">
                <i class="fa fa-circle-o-notch fa-spin"></i>
              </div>
              {% if benefit.acf_benefit_illustration %}
                <img class="stretch" src="{{TimberImage(benefit.acf_benefit_illustration).src}}" alt="{{TimberImage(benefit.acf_benefit_illustration).alt}}" />
              {% endif %}  
            </div>
            <div class="benefit__info">
              <div class="entry-content">
                <h5><span class="index">{{loop.index}}.</span> {{benefit.post_title}}</h5>
                <div class="desc">{{benefit.post_content | wpautop}}</div>
              </div>
            </div>
          </article>
        {% endfor %}
      </div>
    {% endif %}
  </div>
{% endblock %}