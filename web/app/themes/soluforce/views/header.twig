<header class="banner navbar navbar-default navbar-fixed-top" role="banner">
  <nav id="top-nav">
    <div class="container">
      <div class="row">
        <div class="search col-xs-6 col-sm-8">          
          <ul class="nav navbar-right navbar-nav sub-nav">
            <form role="search" method="get" class="search-form__top-nav" action="{{site.url}}/">
            	<label>
            		<span class="screen-reader-text">{{ __('Search for', 'soluforce') }}</span>
            		<input type="search" class="search-field" placeholder="{{ __('Search', 'soluforce') }}" value="{{function.get_search_query}}" name="s" title="{{ __('Search for', 'soluforce') }}" />
            	</label>
            	<button type="submit" class="search-submit toggle-search"><i class="fa fa-search"></i></button>
            </form>
          </ul>
        </div>
        <div class="service col-xs-6 col-sm-4">
          {% if top_menu.get_items %}
            <ul class="nav navbar-nav sub-nav">
              {% for item in top_menu.get_items %}
                {% if 'pipelife' in item.custom._menu_item_classes %}
                  <li class="{{item.classes | join(' ')}}"><a class="brand" href="{{item.get_link}}" title="{{ __('Visit PipeLife website', 'soluforce') }}" target="_blank"><img src="{{theme.uri}}/dist/svg/pipelife_logo.svg" onerror="this.onerror=null; this.src='{{theme.uri}}/dist/images/pipelife_logo.png'" alt="{{item.title}}"></a></li>
                {% else %}
                  <li class="{{item.classes | join(' ')}}"><a href="{{item.get_link | relative}}" title="{{item.title}}" target="{{item.target}}">{{item.title}}</a></li>
                {% endif %}
              {% endfor %}
            </ul>
          {% endif %}
        </div>
      </div>   
    </div>
  </nav>
  <div class="container">
    <div class="navbar-header row">
      <div class="logo col-sm-12 col-md-3 col-lg-4">
        <a class="navbar-brand" href="{{site.url}}">
          <img src="{{theme.uri}}/dist/svg/soluforce_logo.svg" onerror="this.onerror=null; this.src='{{theme.uri}}/dist/images/soluforce_logo.png'" alt="{{site.title}}">
        </a>
      </div>
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">{{ __('Toggle navigation', 'soluforce') }}</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      {% if main_menu.get_items %}
        <nav id="main-nav" class="col-sm-12 col-md-9 col-lg-8 collapse navbar-collapse">
          <ul class="nav navbar-nav">
          {% for item in main_menu.get_items %}
            <li class="{{item.classes | join(' ')}}"><a href="{{item.get_link | relative}}" title="{{item.title}}" target="{{item.target}}">{{item.title}}</a></li>
          {% endfor %}
          </ul> 
        </nav>
      {% endif %}
    </div>
  </div>  
  {% if main_menu.get_items %}
    {% for item in main_menu.get_items %}
      {% if (item.current or item.current_item_parent) and item.get_children %}
        <nav id="sub-nav" class="collapse navbar-collapse">
          <div class="container">
            <div class="row">
              <div class="col-sm-12 col-md-9 col-md-offset-3 col-lg-8 col-lg-offset-4">
                <ul class="nav navbar-nav sub-nav">
                  {% for child in item.get_children %}
                    <li class="{{child.classes | join(' ')}}"><a href="{{child.get_link | relative}}">{{child.title}}</a></li>
                  {% endfor %}
                </ul>
              </div>
            </div>
          </div>
        </nav>
      {% endif %} 
    {% endfor %}
  {% endif %}
</header>