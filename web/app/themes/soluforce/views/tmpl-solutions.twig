{% extends "base.twig" %}

{% block main %}
  <section class="entry-content">
    {% block content %}
      <h1>{{post.title}}</h1>
      <div class="columns">{{post.content}}</div>
    {% endblock %}
  </section>
  {% if solutions %}
    <section class="solutions__row row">
      {% block solutions %}
        {% for solution in solutions %}
          {% set grid_sizes = [ [['col-sm-6', 555, 416, 'center', 768], ['col-xs-12', 738, 553, 'center']], 555, 416, 'center' ] %}
          {% include 'loop-solution.twig' %} 
        {% endfor %}
      {% endblock %}
    </section>
  {% endif %}  
{% endblock %}